<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.milkyway.dukan.activities.ViewProductActivity" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:background="@drawable/circular_border"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/arrow_back_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="@dimen/dimen_35dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:background="@drawable/circular_border"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/search_color" />

                <ImageView
                    android:id="@+id/cart_button"
                    android:layout_width="@dimen/dimen_35dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:background="@drawable/circular_border"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/cart_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:elevation="@dimen/dimen_5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wish_button"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@drawable/circular_border"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/wish_list_checked" />

            <ImageView
                android:id="@+id/share_button"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@drawable/circular_border"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/share" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9AE5ECFB"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView

                android:id="@+id/product_details_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/download" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bannerDotsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:elevation="@dimen/dimen_8dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:id="@+id/brand_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/actor"
                            android:text="HRX by Hrithik Roshan "
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_16sp" />

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:fontFamily="@font/actor"
                            android:text="Men Blue T-Shirt "
                            android:textSize="@dimen/dimen_11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="₹"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="499"
                            android:textColor="@color/black_36"
                            android:textSize="@dimen/dimen_18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:foreground="@drawable/strike"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro_light"
                                android:text="₹"
                                android:textColor="@color/gray_e5" />

                            <TextView
                                android:id="@+id/product_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro_light"
                                android:text="499"
                                android:textColor="@color/gray_e5" />
                        </LinearLayout>

                        <TextView
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="("
                            android:textColor="#FA1A1A" />

                        <TextView
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/product_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="40"
                            android:textColor="#FA1A1A" />

                        <TextView
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="%"
                            android:textColor="#FA1A1A" />

                        <TextView
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:fontFamily="@font/source_sans_pro_light"
                            android:text="OFF)"
                            android:textColor="#FA1A1A" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".3dp"
                        android:background="@color/goodgrey"
                        android:fontFamily="@font/source_sans_pro_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                        android:background="@color/white"
                        android:elevation="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:text="All Details"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_14sp" />

                        <ImageView
                            android:layout_width="@dimen/dimen_22dp"
                            android:layout_height="@dimen/dimen_22dp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:src="@drawable/next" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_45dp"
                        android:background="@color/white"
                        android:elevation="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:text="Size"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_14sp" />

                        <ImageView
                            android:layout_width="@dimen/dimen_22dp"
                            android:layout_height="@dimen/dimen_22dp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:src="@drawable/next" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:elevation="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_gravity="center">

                    <TableRow style="@style/BodyRow">

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="ADD TO CART"
                            android:textColor="#38B693" />

                        <TextView
                            style="@style/BodyText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_45dp"
                            android:layout_weight="2"
                            android:background="#38B693"
                            android:gravity="center"
                            android:text="BUY NOW"
                            android:textColor="@color/white" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
