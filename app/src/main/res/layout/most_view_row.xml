<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="@dimen/dimen_210dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/wish_list"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:src="@drawable/splash_logo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/item_details"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="2"
            android:padding="@dimen/dimen_5dp"
            android:text="Honor 9A (3GB) | 5000mAH battery | Triple Camera"
            android:textSize="@dimen/dimen_12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_current_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:padding="@dimen/dimen_5dp"
                android:text="र 7,999"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/item_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:foreground="@drawable/strike"
                android:padding="@dimen/dimen_5dp"
                android:text="र 7,999"
                android:textSize="@dimen/dimen_11sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>