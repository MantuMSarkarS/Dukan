<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.milkyway.dukan.activities.MainActivity" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#38B693"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/white">


                <!--  toolbar search layout-->
                <RelativeLayout
                    android:id="@+id/searchViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_16dp"
                    android:background="@drawable/rounded_bg_white"
                    android:backgroundTint="#17FFFFFF"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_42dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:layout_toLeftOf="@+id/cancel"
                        android:backgroundTint="@android:color/transparent"
                        android:drawableLeft="@drawable/search"
                        android:drawablePadding="@dimen/dimen_15dp"
                        android:focusable="true"
                        android:fontFamily="@font/josefinsans_regular"
                        android:hint="Search by coupon name, category"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />


                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        app:srcCompat="@drawable/ic_close_black" />


                </RelativeLayout>


                <!--  toolbar menu-->

                <!-- <RelativeLayout
                     android:id="@+id/menu_icon"
                     android:layout_width="@dimen/dimen_32dp"
                     android:layout_height="match_parent">

                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:layout_centerVertical="true"
                         android:src="@drawable/menu" />


                 </RelativeLayout>-->


                <!--  toolbar coustom search btn-->
                <RelativeLayout
                    android:id="@+id/searchBtn"
                    android:layout_width="@dimen/dimen_32dp"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_toRightOf="@+id/menu_icon"
                    android:background="@drawable/rounded_bg_white"
                    android:backgroundTint="#17FFFFFF"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/searchBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_4dp"
                        android:src="@drawable/search" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsans_bold"
                    android:gravity="center"
                    android:paddingRight="@dimen/dimen_40dp"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18dp"
                    android:visibility="gone" />


                <!--  toolbar notification-->

                <LinearLayout
                    android:id="@+id/NotificationBell"
                    android:layout_width="@dimen/dimen_80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center">

                    <ImageView
                        android:id="@+id/toolbar_search"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/search"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/notification" />

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/cart_white" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/fragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/nav_graph" />
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:itemBackground="@color/white"
            app:itemIconTint="#707070"
            app:itemTextColor="#303043"
            app:menu="@menu/drawer_menu" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
