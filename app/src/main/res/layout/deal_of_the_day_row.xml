<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_3dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/deals_row"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_250dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/dealsImage"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_140dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/splash_logo"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:padding="@dimen/dimen_5dp"
                android:text="र"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_light"
                android:text="231456"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:foreground="@drawable/strike"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/oldprice_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:text="र"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/item_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_5dp"
            android:text="Samsung Galaxy S6 Edge"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/item_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="Honor 9A (3GB) | 5000mAH battery | Triple Camera"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/most_view_row"
        android:layout_width="@dimen/dimen_170dp"
        android:layout_height="@dimen/dimen_210dp"
        android:background="#9AE7EAF1"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/most_view_Image"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_140dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/splash_logo"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/most_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_5dp"
            android:text="Samsung Galaxy S6 Edge"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="Honor 9A (3GB) | 5000mAH battery | Triple Camera"
            android:textSize="@dimen/dimen_16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:padding="@dimen/dimen_5dp"
                android:text="र"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/most_view_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_light"
                android:text="231456"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:foreground="@drawable/strike"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/most_view_oldprice_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:text="र"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/most_view_item_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/top_pick_row"
        android:layout_width="@dimen/dimen_170dp"
        android:layout_height="@dimen/dimen_210dp"
        android:background="#9AE7EAF1"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="vertical"
            android:elevation="@dimen/dimen_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/border_shape">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_8sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="%"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingEnd="@dimen/dimen_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_8sp" />
            </LinearLayout>
            <TextView
                android:paddingTop="-3dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="off"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_170dp"
            android:layout_height="@dimen/dimen_210dp"
            android:background="#9AE7EAF1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/top_pick_Image"
                android:layout_width="@dimen/dimen_140dp"
                android:layout_height="@dimen/dimen_140dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10dp"
                android:src="@drawable/splash_logo"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/top_pick_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_3dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen_5dp"
                android:text="Samsung Galaxy S6 Edge"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:padding="@dimen/dimen_5dp"
                    android:text="र"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_18sp" />

                <TextView
                    android:id="@+id/top_pick_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:text="231456"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_5dp"
                    android:foreground="@drawable/strike"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/top_pick_oldprice_rupee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_light"
                        android:text="र"
                        android:textSize="@dimen/dimen_12sp" />

                    <TextView
                        android:id="@+id/top_pick_item_old_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_light"
                        android:textSize="@dimen/dimen_12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>