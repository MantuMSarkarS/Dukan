<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/dimen_3dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dimen_170dp"
        android:layout_height="@dimen/dimen_210dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/dealsImage"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/splash_logo"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:padding="@dimen/dimen_5dp"
                android:text="र"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_light"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_18sp" />

            <LinearLayout
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:foreground="@drawable/strike"
                android:layout_gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/oldprice_rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:text="र"
                    android:textSize="@dimen/dimen_12sp" />
                <TextView
                    android:id="@+id/item_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_5dp"
            android:text="Samsung Galaxy S6 Edge"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/item_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="Honor 9A (3GB) | 5000mAH battery | Triple Camera"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>