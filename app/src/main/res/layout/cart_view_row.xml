<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/splash_logo"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:fontFamily="@font/actor"
                android:maxLines="2"
                android:paddingTop="@dimen/dimen_5dp"
                android:text="Apple Mac Pro"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_12sp" />

            <TextView
                android:layout_width="@dimen/dimen_200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:fontFamily="@font/source_sans_pro_light"
                android:maxLines="1"
                android:text="Honor 9A (3GB) | 5000mAH battery | Triple Camera"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dimen_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:maxLines="1"
                    android:text="Sold by: "
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_10sp" />
                <TextView
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:maxLines="1"
                    android:text="Indiflashmart"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_current_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/actor"
                    android:padding="@dimen/dimen_5dp"
                    android:text="र 7,999"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/item_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:foreground="@drawable/strike"
                    android:padding="@dimen/dimen_5dp"
                    android:text="र 7,999"
                    android:textSize="@dimen/dimen_12sp" />
                <TextView
                    android:id="@+id/off_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:fontFamily="@font/source_sans_pro_light"
                    android:padding="@dimen/dimen_5dp"
                    android:text="र 7,999"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:background="#DAD9D9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"/>
        <View
            android:layout_width=".3dp"
            android:layout_height="@dimen/dimen_12dp"
            android:background="#DAD9D9"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to wishlist"/>
    </LinearLayout>
</LinearLayout>